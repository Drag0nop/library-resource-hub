# Flask secret key (used for sessions, CSRF, etc.)
SECRET_KEY=some-long-random-key

# Database connection (escaped special characters are fine)
DATABASE_URL=mysql+pymysql://root:password@localhost/library_db_name

# Email backend options
# Use 'console' for localhost (prints OTPs instead of sending)
# Use 'smtp' for real Gmail OTP delivery
EMAIL_BACKEND=console

# SMTP (only needed if EMAIL_BACKEND=smtp)
SMTP_EMAIL=your_gmail@gmail.com
SMTP_PASS=your_app_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
